@model MeetingNote

<!-- Ok simgesi -->
<span class="back-button" onclick="goBack()">← </span>

@{
    ViewData["Title"] = "Müşteri Görüşme Detayı";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="detail-row">
                <div class="label">Firma Adı:</div>
                <div class="value">@Model.Customers.CompanyName</div>
            </div>
            <div class="detail-row">
                <div class="label">Görüşme Tipi:</div>
                <div class="value">@Model.MeetingType.MeetingTypeDescription</div>
            </div>
            <div class="detail-row">
                <div class="label">Görüşme Tarihi:</div>
                <div class="value">@Model.Date?.ToString("yyyy-MM-dd")</div>
            </div>
            <div class="detail-row">
                <div class="label">Görüşme Notları:</div>
                <div class="value notes">
                    @Model.Notes
                </div>
            </div>
            <div class="detail-row">
                <div class="label">Son Güncelleme Tarihi:</div>
                <div class="value">@Model.LastUpdatedDate?.ToString("yyyy-MM-dd")</div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" onclick="goBack()">Geri Dön</button>
        </div>
    </div>
</div>

<script>
    // Geri gitmek için fonksiyon
    function goBack() {
        window.history.back();  // Tarayıcıda bir önceki sayfaya geri git
    }
</script>

<style>
